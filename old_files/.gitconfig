[user]
	email = victorfern91@gmail.com
	name  = Victor Fernandes

[push]
	default = simple

[alias]
	st = status
	c = commit
	amend = commit --amend --reuse-message=HEAD
	lg = log --graph --pretty=format:'%Cred%h%Creset (%G?) -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	contributors = shortlog --summary --numbered
        # See more about git please at https://estl.tech/a-gentler-force-push-on-git-force-with-lease-fb15701218df
	please = push --force-with-lease

[pull]
        rebase = true
        default = simple

[color]
        branch = auto
        diff = auto
        grep = auto
        interactive = auto
        status = auto

[rebase]
        autoStash = true
